# ─── Server ──────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://piletrack:piletrack@localhost:5432/piletrack?schema=public

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ─── JWT ─────────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ─── CORS ────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ─── Logging ─────────────────────────────────────────────────────────────────
LOG_LEVEL=debug

# ─── Rate Limiting ───────────────────────────────────────────────────────────
RATE_LIMIT_ENABLED=true
