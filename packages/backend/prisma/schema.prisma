  pile      Pile? @relation(fields: [pileId], references: [id])
  createdBy User  @relation("ConcreteDeliveryCreator", fields: [createdById], references: [id])

  @@index([siteId])
  @@index([pileId])
  @@index([deliveryDate])
  @@index([deletedAt])
  @@map("concrete_deliveries")
}
